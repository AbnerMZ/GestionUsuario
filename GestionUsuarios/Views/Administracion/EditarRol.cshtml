@model EditarRolViewModel

@{
    ViewBag.Title = "Editar Rol";
}


 <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Lista de Roles</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">


        <div class="card-body">
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RolNombre" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RolNombre" class="form-control" />
            <span asp-validation-for="RolNombre" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Editar</button>
            <a asp-action="listaRoles" class="btn btn-primary" style="width:auto">Cancelar</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Usuarios en este rol</h3>
        </div>
        <div class="card-body">
            @if (Model.Usuarios.Any())
            {
                for (int i=0; i < Model.Usuarios.Count; i++) 
                {
                    <h5 class="card-title">@Model.Usuarios[i]</h5>
                }                
            }
            else
            {
                <h5 class="card-title">Ninguno por ahora</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administracion" asp-action="EditarUsuarioRol" 
            asp-route-rolId="@Model.Id" class="btn btn-primary" style="width:auto">
                Crear o borrar usuario
            </a>           
        </div>
    </div>
</form>

  </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->