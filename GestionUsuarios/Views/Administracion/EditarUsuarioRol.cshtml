@model List<UsuarioRolModelo>

@{
    var roleId = ViewBag.roleId;
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Lista de Roles</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">


        <div class="card-body">
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Agregar o borrar usuarios a este rol</h2>
        </div>
        
    <div class="card-body">
        @for (int i=0; i< Model.Count; i++)
        {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].UsuarioId">
                <input type="hidden" asp-for="@Model[i].UsuarioNombre">
                <input asp-for="@Model[i].EstaSeleccionado" class="form-check-input">
                <label class="form-check-label" asp-for="@Model[i].EstaSeleccionado">
                    @Model[i].UsuarioNombre
                </label>
            </div>
        }
    </div>
    <div class="card-footer">
        <input type="submit" value="Actualizar" class="btn btn-primary" style="width:auto" />
        <a asp-action="EditarRol" asp-route-id="@roleId" class="btn btn-primary" style="width:auto">Cancelar</a>
    </div>
    </div>

</form>

                </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->