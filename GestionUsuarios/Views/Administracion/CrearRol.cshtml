@model CrearRolViewModel

@{
    ViewBag.Title = "Crear Nuevo Rol";
}



<div class="hold-transition register-page">
<div class="register-box">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a class="h1"><b>Crear Rol</b></a>
    </div>
    <div class="card-body">
<form asp-action="CrearRol" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="input-group mb-3">
        <input asp-for="NombreRol" class="form-control" placeholder="Nombre" aria-required="true" />
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-user"></span>
            </div>               
        </div>    
        <span asp-validation-for="NombreRol" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Crear Rol
            </button>
        </div>
    </div>

</form>
 </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>
<!-- /.register-box -->

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
